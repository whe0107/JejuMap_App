<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".parkinginfo1">

    <TextView
        android:id="@+id/pcinfo1_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="공대 4호관 주차장"
        android:textSize="40dp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="312dp" />

    <View
        android:id="@+id/line1"
        android:layout_below="@id/pcinfo1_textView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>


    <TableLayout
        android:id="@+id/pcinfotable1_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcinfo1_textView1"
        android:layout_margin="30dp"
        android:background="#dddddd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp">

        <TableRow>
            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="주차장 칸 수"
                android:textSize="30sp" />

            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="87개"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="장애인 주차장 수"
                android:textSize="30sp" />

            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="재학생 주차 가능"
                android:textSize="30sp" />

            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="O"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="교직원 주차 가능"
                android:textSize="30sp" />

            <TextView
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="O"
                android:textSize="30sp" />
        </TableRow>


    </TableLayout>


</RelativeLayout>