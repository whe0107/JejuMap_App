
<LinearLayout

    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity = "center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_map"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:paddingTop="100dp"
            android:background="@drawable/map_location"
            android:onClick="onClick"
            android:text="교내 지도"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_parking"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:background="@drawable/parking_location"
            android:onClick="onClick"
            android:paddingTop="100dp"
            android:text="주차장 지도"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity = "center">
        <Button
            android:id="@+id/btn_food"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:paddingTop="100dp"
            android:onClick="onClick"
            android:background="#E2F0D9"
            android:textSize="25dp"
            android:text="음식점 리스트"/>

        <Button
            android:id="@+id/btn_pc"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:paddingTop="100dp"
            android:onClick="onClick"
            android:background="#DEEBF7"
            android:textSize="25dp"
            android:text="PC방 리스트" />
    </LinearLayout>
</LinearLayout>
